package SL::DNSProxy::Server;

use strict;
use warnings;

use IO::Socket;

sub create {
    my $class = shift;

    my $sock = IO::Socket::INET->new(
        LocalAddr => '127.0.0.1:53',

        #    LocalAddr => '192.168.1.193:53',
        Proto     => "udp",
        ReuseAddr => 1,
        Blocking  => 0,
    ) || die $!;

    IO::Handle::blocking( $sock, 0 );
}

1;

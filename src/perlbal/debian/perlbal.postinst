#!/bin/sh

if [ ! -e /etc/perlbal/perlbal.conf ]
	then
		mkdir -p /etc/perlbal
		cp /usr/share/perlbal/perlbal.conf.default /etc/perlbal/perlbal.conf
fi

if [ ! -e /etc/perlbal/nodelist.dat ]
	then
		mkdir -p /etc/perlbal
		cp /usr/share/perlbal/nodelist.dat.default /etc/perlbal/nodelist.dat
fi


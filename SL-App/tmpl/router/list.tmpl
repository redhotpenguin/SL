[% PROCESS header.tmpl title="Silver Lining Dashboard:  View routers"  %]
<div class="nine_column">


	<div class="header_block">
		<h1 class="left">My Networks <em>[% count %] routers</em></h1>
		<span class="pill_button right"><a href="[% base_uri %]/app/router/edit">ADD A ROUTER</a></span>
		<div class="clear"></div>
	</div>
	

	[% IF msg %]
	<p class="error">[% msg %]</p>
	[% END %]
	
	
	<table class="router_table">
		<tr>
			<th class="status">status</th>
			<th class="router_name">router name</th>
			<th>Mac address</th>
			<th class="delete">delete</th>
		</tr>
		
		[% FOREACH router = routers %]
		<tr class="[% IF loop.index % 2 %]lite[% ELSE %]dark[% END %]">
			
			<!-- status -->
			<td class="status">
				<strong class="active">active</strong>
			</td>
			
			<!-- name -->	
			<td class="router_name [% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
				<a href="[% base_uri %]/app/router/edit/?router_id=[% router.router_id %]">
				[% router.name or 'unnamed' %]</a> <a href="#" class="more_info">more info</a>
				<ul class="router_info">
					<li><strong>SSID:</strong> [% router.ssid or '?'  %]</li>
					<li><strong>Last seen:</strong>[% router.last_seen or '?'  %]</li>
					<li><strong>View yesterday:</strong>[% router.views_daily  %]</li>
				</ul>
			</td>
			
			<!-- mac address -->
			<td class="mac_address [% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
				[% router.macaddr %]
			</td>
			
			<!-- delete -->
			<td class="delete">
				<a href="#">delete</a>
			</td>
		</tr>
	[% END %]
	</table>



</div>
[% PROCESS footer.tmpl %]

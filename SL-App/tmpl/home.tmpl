[% PROCESS header.tmpl title="Silver Lining Dashboard - Overview" selected="overview" %]
 
<div id="main_content" class="grid_10 suffix_1">	
	<!-- Hokey breadcrumb 
	<p><a href="[% base_uri %]/app/home/welcome">Welcome</a> Silver Lining</p>
	-->
	<h2>
		News from the blog 
		<a href="http://www.silverliningnetworks.com/blog/rss/">
			<img alt="Subscribe to the Blog" height="15" src="[% base_uri %]/resources/images/icons/minicon/mini_rss.png" width="15" border="0"/>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <link rel="stylesheet" type="text/css" href="[% base_uri %]/resources/css/triple_a.css" />
  <!--[if IE 6]><link rel="stylesheet" type="text/css" href="[% base_uri %]/resources/css/triple_a_ie6.css" /><![endif]--> 
  <!--[if IE 7]><link rel="stylesheet" type="text/css" href="[% base_uri %]/resources/css/triple_a_ie7.css" /><![endif]-->
  <link rel="stylesheet" type="text/css" href="[% base_uri %]/resources/css/thickbox.css" />
  <script src="[% base_uri %]/resources/js/simple_validation.js" type="text/javascript"></script>
  <title>Advertiser Recurring Billing Authorization - Silver Lining Networks</title>
</head>
<body id="sln">

<!-- TOP SECTION START #################### -->
	<div id="section_one">
		<div class="center">
			<!-- CHOOSE WIFI COPY ************************ --> 
			<div class="two_thirds left padding_top">
				<h2>Advertiser Recurring Billing Authorization</h2>
				<p>Please select a plan for your Silver Lining Networks advertiser account, and enter your payment information.  Once your payment has been processed, a Silver Lining Networks representative will contact you to place your advertisements.</p>

			
			</div>

			<!-- LOGO ************************ --> 
			<div class="one_third right">
                <h1 class="logo"><a href="#"><span></span>Silver Lining Networks</a></h1>
            </div>

			<div class="clear"></div>
		</div>
	</div>

	
    <!-- BODY SECTION START ######################################### -->
    [% PROCESS auth/form/bodywrapper_top.tmpl %]

        <!-- MAIN COLUMN ######## -->
        [% PROCESS auth/form/paperbox_top.tmpl %]

                <h2 class="header">Please fill out all fields</h2>

                <!-- PAYMENT FORM -->
                <form id="sl_payment" action="[% base_uri %]/billing/advertiser" method="post">

                        <dl id="form_list">
[% IF errors.payment %]
<dd><font color="red">[% errors.payment %]</font></dd>
[% ELSIF errors.invalid %]
<dd><font color="red">Some fields were invalid, please correct them</font></dd>
[% ELSIF errors.missing %]
<dd><font color="red">Please complete the missing fields</font></dd>
[% END %]

                                <dd class="subtle"><em>All fields required</em></dd>
                                [% PROCESS billing/form/ad_plan.tmpl %]
                                [% PROCESS auth/form/user_info.tmpl %]
                                [% PROCESS auth/form/creditcard.tmpl %]
                                [% PROCESS auth/form/address.tmpl %]
                                [% PROCESS auth/form/submit_button.tmpl %]
                       </dl>
                </form>

        [% PROCESS auth/form/paperbox_bottom.tmpl %]
        <!-- END MAIN COLUMN -->

        <!-- SIDE COLUMN ##### -->
        <div class="one_third left">
            [% PROCESS billing/form/ad_sidebar.tmpl %]
        </div>
        <!-- END SIDE COLUMN ##### -->

        [% PROCESS auth/form/bodywrapper_bottom.tmpl %]

        <!-- END BODY SECTION ######################################### -->

        <!-- PLEDGE -->

        [% PROCESS auth/form/our_pledge.tmpl %]

</body>
</html>

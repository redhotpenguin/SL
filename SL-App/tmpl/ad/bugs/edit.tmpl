[% PROCESS header.tmpl %]
[% PROCESS left.tmpl %]

<div id="list_center">
	<div class="content">

<h2>[% PROCESS ad/bugs/nav.tmpl %] > 
[% UNLESS bug.bug_id  %]Create a New Bug[% ELSE %]Edit an Existing Bug[% END %]</h2>

<hr size="1" color="#CCCCCC">
<div id="edit_form">

<table class="edit"> 

<tr><td colspan="2">
[% IF bug.bug_id %]
	<h2>Edit Existing Image Bug Id '[% bug.bug_id %]'</h2>
[% ELSE %]
<h2>Create a New Image Bug</h2></td></tr>
[% END %]
</td></tr>

[% IF errors.missing %]
<tr><td colspan="2"><font color="red">
Please complete the missing fields</font></td></tr>[% END %]
[% IF errors.invalid %]
<tr><td colspan="2"><font color="red">
Some fields were invalid, please correct them</font></td></tr>[% END %]
<tr><td colspan=2><hr size="1" color="#CCCCCC"></td></tr>

<form method="POST" action="[% base_uri %]/app/ad/bugs/edit">
<input type="hidden" name="id" value="[% bug.bug_id %]">

<!-- bug name -->
<tr><td>
[% IF errors.missing.name %]<font color="red">[% END %]
Bug Name:
[% IF errors.missing.name %]</font>[% END %]
</td>
<td><input type="text" name="name" size="50" maxlength="100" value="[% req.param('name') or bug.name %]">
</td></tr>
<tr><td colspan=2><font color="#CCCCCC">(100 character limit)</font></td></tr>
<!-- end bug name -->

<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>

<!-- image_href -->
<tr><td>
[% IF errors.missing.image_href or errors.invalid.image_href%]<font color="red">
[% END %]
Bug Image link:
[% IF errors.missing.image_href or errors.invalid.image_href %]</font>[% END %]
</td>
<td><input type="text" name="image_href" size="50" maxlength="512" value="
[% UNLESS  bug.bug_id  %]
[% IF req.param('image_href') %][% req.param('image_href') %]
[% ELSE %]http://[% END %]
[% ELSE %][% req.param('image_href') or bug.image_href %]
[% END %]">
</td></tr>
<tr><td colspan=2><font color="#CCCCCC">
(example http://www.redhotpenguin.com/img/free_wireless.gif)</font></td></tr>
[% IF req.param('image_href') or bug.image_href %]
<tr><td colspan=2>
<img src="[% req.param('image_href') or bug.image_href %]"></td></tr>[% END %]
<!-- end image_href -->

<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>

<!-- link_href -->
<tr><td>
[% IF errors.missing.link_href or errors.invalid.link_href %]<font color="red">
[% END %]
Bug links to:
[% IF errors.missing.link_href or errors.invalid.link_href %]</font>[% END %]
</td>
<td><input type="text" name="link_href" size="50" maxlength="512" 
value="
[% UNLESS  bug.bug_id  %]
[% IF req.param('link_href') %][% req.param('link_href') %]
[% ELSE %]http://[% END %]
[% ELSE %][% req.param('link_href') or bug.link_href %]
[% END %]">
</td></tr>
<tr><td colspan=2><font color="#CCCCCC">
(example http://www.redhotpenguin.com/?referer=silverlining)</font></td></tr>
[% IF bug.link_href %]
<tr><td colspan=2><a href="[% bug.link_href %]">Link</a></td></tr>[% END %]
<!-- end image_href -->

<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>

<!-- active -->
<tr><td>Active:</td><td>
Yes<input type="radio" name="active" value="1" [% IF bug.active == 1 ||  ! bug.bug_id %] checked [% END %]>
No<input type="radio" name="active" value="0" [% IF bug.active == 0 %] checked [% END %]></td></tr>
<tr><td colspan=3><font color="#CCCCCC">
Deactivating the bug deactivates it.
</font></td></tr>
<!-- end active -->

<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>
<tr><td><input type="submit" value="Save"></td></tr>
</form>
</table>

</div>
</div>
</div>
[% PROCESS right.tmpl %]
[% PROCESS footer.tmpl %]

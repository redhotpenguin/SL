[% PROCESS header.tmpl title="Silver Lining Dashboard:  Edit Branding Image Ad Zone"  selected="adcenter" %]

<div class="grid_16">
	<div id="breadcrumb">
		<div id="breadcrumb_inner">
			<ul>[% PROCESS ad/bugs/nav.tmpl %]<li>Edit <strong>'[% ad_zone.name %]'</strong> Branding Image</li></ul>
		</div>
	</div>
</div>
<div class="clear"></div>


<!-- BANNER PREVIEW -->
<div class="grid_16">
 <label class="text" for="sample">Preview - Branding Image must be 120 pixels wide by 90 pixels tall (IAB Button 1)</label>
    <div id="branding_preview">
	<div id="branding">[% IF (req.param('image_href') != ' ') or (ad_zone.image_href != '') %]<a href="[% req.param('image_link') or ad_zone.image_link %]"><img src="[% req.param('image_href') or ad_zone.image_href %]"></a>[% ELSE %]<a href="http://www.silverliningnetworks.com/?referer=dashboard_example"><img src="[% base_uri %]/resources/images/ads/sln/120x90.gif"></a>[% END %]</div>
	<div class="clear"></div>
	</div>
</div>	


<form  method="POST" action="[% base_uri %]/app/ad/bugs/edit">

<div id="main_content" class="grid_10 suffix_1">
	<h2>Edit '[% ad_zone.name %]' Branding Image</h2>

		<!-- Errors -->
        [% IF image_err %]<p class="error">The image must be 120 x 90 pixels, yours was [% image_err.width %] x [% image_err.height %] pixels</p>[% END %]
		[% IF errors.missing %]<p class="error">Please fill in the missing fields</p>[% END %]
		[% IF errors.invalid %]<p class="error">Some fields were invalid, please correct them</p>[% END %]

		<ul class="form row"> 
			<li>

            [% PROCESS ad/name.tmpl type="Branding Image" %]
			</li>


            [% PROCESS ad/banner.tmpl type="Branding Image" %]

		</ul>
</div>


[% PROCESS ad/advanced.tmpl type="Branding Image" %]


<div class="grid_16">
	<ul class="form">
		<li>
			<input type="hidden" name="id" value="[% ad_zone.ad_zone_id %]">
		   <input type="submit" value="Save Branding Image" />
		</li>
	</ul>
</div>

</form>

[% PROCESS footer.tmpl %]

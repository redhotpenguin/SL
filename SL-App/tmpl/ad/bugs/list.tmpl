[% PROCESS header.tmpl title="Silver Lining Dashboard:  Ad Zones" selected="adcenter" %]
<div class="grid_16">
	<div id="breadcrumb">
		<div id="breadcrumb_inner">
			<ul>[% PROCESS ad/nav.tmpl %]<li><strong>Branding Images</strong></li></ul>
		</div>
	</div>
</div>
<div class="clear"></div>



<div id="main_content" class="grid_16">
	<h2>Manage Branding Images</h2>
	<p class="tip"> [% count %] Branding Images</p>
	
	<h3 class="row">Select a branding image below to edit</h3>
	
	[% IF msg %]<p class="error">[% msg %]</p>[% END %]
	
	
	<table class="basic_table">
	<tr>
		<th>Name</th>
		<th>Active On</th>
		<th>Last Modified By</th>
		<th>Default Image</th>
	</tr>
	
	[% FOREACH ad_zone = ad_zones %]
		<tr>
			<td>
			<a href="[% base_uri %]/app/ad/bugs/edit/?id=[% ad_zone.ad_zone_id %]">
			[% ad_zone.name %]</a></td>
			
			<td>
			[% IF ad_zone.router_count == 0 %]
			    [% ad_zone.router_count %]
			[% ELSE %]
			<a href="[% base_uri %]/app/router/list?ad_zone_id=[% ad_zone.ad_zone_id %]">
			[% ad_zone.router_count %]</a>
			[% END %]
			</td>
			
			<td>
			<a href="mailto:[% ad_zone.reg.email %]">[% ad_zone.reg.email %]</a><br />[% ad_zone.mts %]
			</td>

            <td>[% IF ad_zone.is_default %]Yes[% ELSE %]No[% END %]</td>


		</tr>
	[% END %]
	</table>
</div>


[% PROCESS footer.tmpl %]
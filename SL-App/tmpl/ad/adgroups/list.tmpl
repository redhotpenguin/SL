[% PROCESS header.tmpl %]

<div id="list_center">
<div class="content">

<h2>[% PROCESS ad/adgroups/nav.tmpl %] > <a href="[% base_uri %]/app/ad/adgroups/list">[% count %] Ad / Ad Groups Total</a></h2>

[% IF session.msg %]
<p><font color="red">[% session.msg %]</font></p>
[% END %]

<p style="text-align: right; padding-bottom: 5px;"><a href="[% base_uri %]/app/ad/adgroups/edit">Create a New Ad Group</a></span></p>
<table class="list"
<tr class="list_header">
<td>Ad Group Name</td>
<td>Ad Text</td>
<td>&nbsp;</td>
</tr>
[% FOREACH ad__ad_group = ad__ad_groups %]
  <tr class="[% IF loop.index % 2 %]lite[% ELSE %]dark[% END %]">
	
  <td style="color: #639D63">[% ad__ad_group.ad_group_id.name %]</td>
  <td>[% ad__ad_group.ad_text %]</td>
  <td><a href="[% base_uri %]/app/ad/groups/ads/delete[% ad__ad_group.ad_group_id.ad_group_id %]</td>
</tr>
[% END %]
</table>
</div>
</div>
[% PROCESS footer.tmpl %]

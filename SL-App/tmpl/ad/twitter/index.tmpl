[% PROCESS header.tmpl title="Silver Lining Dashboard:  Add or edit ad zone" %]
<div class="grid_10 suffix_1">	
	<p>[% PROCESS ad/nav.tmpl %] > Twitter Feed</p>
	
	<h2>Twitter Feed Message Bar</h2>
	
	[% IF errors.missing %]
	<p class="error">Please input a Twitter User Name</p>
	[% END %]
	
	[% IF errors.invalid %]
	<p class="error">The Twitter User Name you submitted is invalid</p>
	[% END %]
	
	
	
	
	<form method="POST" action="[% base_uri %]/app/ad/twitter/index">
	
	<!-- name -->
	[% IF errors.missing.twitter_id or errors.invalid.twitter_id %]
		<p class="error">[% END %]
		Twitter User Name:	[% IF errors.missing.twitter_id or errors.invalid.twitter_id %]</p>
	[% END %]
	
	<input type="text" name="twitter_id" size="30" value='[% req.param('twitter_id') or reg.account_id.twitter_id %]' />
	<!-- end name -->
	
	<!-- sweep -->
	<p><input type="checkbox" name="sweep" /> Activate the Twitter Feed on all devices (this will reset all existing ad bar settings)</p>
	<!-- end sweep -->
	
	
	[% IF  !errors.invalid.twitter_id %]
	<div id="twitter_div">
		<h2 class="sidebar-title">Preview:</h2>
		<span id="twitter_update_list"></span>
	</div>
	<script type="text/javascript" src="http://s2.slwifi.com/js/blogger.js"></script>
	<script type="text/javascript" src="http://twitter.com/statuses/user_timeline/[% req.param('twitter_id') or reg.account_id.twitter_id %].json?callback=twitterCallback2&count=1"></script>	
	[% END %]
	
	
	<input type="submit" value="Save Twitter Feed" >
	</form>
</div>

<div id="secondary_content" class="grid_5">
	<div id="sc_top">
		<div id="sc_bottom">
		
		
		</div>
	</div>
</div>

[% PROCESS footer.tmpl %]

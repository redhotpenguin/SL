[% PROCESS header.tmpl title="Silver Lining Dashboard:  Manage ads" selected="adcenter" %]

<div id="main_content" class="grid_10 suffix_6">	
	<h2>Advertisement Center</h2>
	
	[% IF msg %]
		<p class="success">[% msg %]</p>
	[% END %]
	<div class="row">
		<p>This is where you manage the targeting of ads and messages on your Silver Lining routers.  Click on the links below to edit message bars or ad zones.While you can edit all of these items in this section, you will only be able to choose one of the three ad types for any given router (Twitter Feed, Text Entry, or Ad Invocation Code)
		</p>
	</div>

	
	<!-- ADVERTISMENT OPTIONS -->
	
	<div class="grid_5 alpha">
		<!-- BANNER ADS -->
		<a class="large_button" href="[% base_uri %]/app/ad/groups/list">
			<img alt="Splash Page" src="[% base_uri %]/resources/images/icons/application/banner.png" />
			<strong>Banner Ads (IAB)</strong> 
			<span>Use images or invocation codes</span>
		</a>
	</div>
	<div class="grid_5 omega">
		<!-- SPLASH PAGE -->
		<a class="large_button" href="[% base_uri %]/app/ad/splash/index">
			<img alt="Splash Page" src="[% base_uri %]/resources/images/icons/application/splash.png" />
			<strong>Splash Page Ads</strong>
			<span>Use images or invocation codes</span>
		</a>
	</div>
	<div class="clear"></div>
	
	<div class="grid_5 alpha">
		<!-- TWITTER -->
		<a class="large_button" href="[% base_uri %]/app/ad/twitter/index">
			<img alt="Twitter" src="[% base_uri %]/resources/images/icons/application/Twitter.png" />
			<strong>Twitter Message Bar</strong>
			<span>Use twitter in your ad bar</span>
		</a> 
		
	</div>
	<div class="grid_5 omega">
		<!-- TEXT MESSAGE -->
		<a class="large_button" href="[% base_uri %]/app/ad/msg/index">
			<img alt="Text Message" src="[% base_uri %]/resources/images/icons/application/Comment_edit.png" />
			<strong>Text Message Bar</strong> 
			<span>Use text messages in your ad bar </span>
		</a>
	</div>
	<div class="clear"></div>

</div>





[% PROCESS footer.tmpl %]

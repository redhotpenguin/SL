[% PROCESS header.tmpl title="Silver Lining Dashboard:  Ad zones" %]
[% PROCESS left.tmpl %]

<div id="list_center">
<div class="content">

<h2>[% PROCESS ad/groups/nav.tmpl %] > [% count %] Ad zones</h2>
<hr class="sl_line">

[% IF msg %]
<p><font color="red">[% msg %]</p>
<p><hr class="sl_line"></p>
[% END %]

<p style="text-align: left; padding-bottom: 5px;">
<a href="[% base_uri %]/app/ad/groups/edit">New ad zone</a></span></p>

<table class="list">
<tr class="list_header">

<td class="header">Name</td>
<td class="header">Size</td>
<td class="header">Active</td>
<td class="header">Routers</td>
</tr>

[% FOREACH ad_zone = ad_zones %]
  <tr class="[% IF loop.index % 2 %]lite[% ELSE %]dark[% END %]">

<!-- name -->	
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
<a href="[% base_uri %]/app/ad/groups/edit/?id=[% ad_zone.ad_zone_id %]">
[% ad_zone.name %]</a></td>

<!-- ad_size -->
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% ad_zone.ad_size_id.name %] ([% ad_zone.ad_size_id.width %]x[% ad_zone.ad_size_id.height %])</td>

<!-- active -->	
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% IF ad_zone.active %]Yes[% ELSE %]No[% END %]</td>

<!-- routers -->
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% IF ad_zone.router_count == 0 %]
    [% ad_zone.router_count %]
[% ELSE %]
<a href="[% base_uri %]/app/router/list?ad_zone_id=[% ad_zone.ad_zone_id %]">
[% ad_zone.router_count %]</a>
[% END %]
</td>

</tr>
[% END %]
</table>

</div>
</div>


[% PROCESS footer.tmpl %]


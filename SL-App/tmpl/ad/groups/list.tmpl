[% PROCESS header.tmpl %]
[% PROCESS left.tmpl %]

<div id="list_center">
<div class="content">

<h2>[% PROCESS ad/groups/nav.tmpl %] > <a href="[% base_uri %]/app/ad/groups/list">[% count %] Ad Groups Total</a></h2>
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>

<p style="text-align: left; padding-bottom: 5px; width: 500px;">
<a href="[% base_uri %]/app/ad/groups/edit">Create a New Ad Group</a></span></p>

[% IF session.msg %]
<p><font color="red">[% session.msg %]</font></p>
[% END %]

<table class="list">
<tr class="list_header">
<td class="header">Ad Group</td>
<td class="header">Ad Type</td>
<td class="header">Active</td>
<td class="header">Number of Ads</td>
<td class="header">Routers</td>
</tr>
[% FOREACH ad_group = ad_groups %]
  <tr class="[% IF loop.index % 2 %]lite[% ELSE %]dark[% END %]">

<!-- name -->	
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
<a href="[% base_uri %]/app/ad/groups/edit/?id=[% ad_group.ad_group_id %]">
[% ad_group.name %]</a></td>

<!-- type -->
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% ad_group.type %]</td>

<!-- active -->	
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% IF ad_group.active %]Yes[% ELSE %]No[% END %]</td>

<!-- ad count -->	
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% IF ad_group.ad_count == 'NA' %]
  [% ad_group.ad_count %]
[% ELSIF ad_group.ad_count != 0 %]
  <a href="[% base_uri %]/app/ad/groups/ads/list?ad_group_id=[% ad_group.ad_group_id %]">
[% ad_group.ad_count %]</a>
[% ELSIF ad_group.ad_count == 0 %]
  <a href="[% base_uri %]/app/ad/ads/list">
  [% ad_group.ad_count %] (add ads)</a>
[% END %]</td>


<!-- routers -->
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% IF ad_group.router_count == 0 %]
<a href="[% base_uri %]/app/router/list">
[% ad_group.router_count %] (add routers)</a>
[% ELSE %]
<a href="[% base_uri %]/app/ad/groups/routers/?ad_group_id=[% ad_group.ad_group_id %]">
[% ad_group.router_count %]</a>
[% END %]
</td>

</tr>
[% END %]
</table>

</div>
</div>


[% PROCESS footer.tmpl %]


[% PROCESS header.tmpl title="Silver Lining Dashboard:  Manage Your Ad Groups" %]
[% PROCESS left.tmpl %]

<div id="list_center">
<div class="content">

<h2>[% PROCESS ad/groups/nav.tmpl %] > [% count %] Ad Zones</h2>
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>

<p style="text-align: left; padding-bottom: 5px; width: 500px;">
<a href="[% base_uri %]/app/ad/groups/edit">Add a new Ad Zone</a></span></p>

[% IF session.msg %]
<p><font color="red">[% session.msg %]</font></p>
[% END %]

<table class="list">
<tr class="list_header">
<td class="header">Ad Zone</td>
<td class="header">Creator</td>
<td class="header">Ad Type</td>
<td class="header">Active</td>
<td class="header">Routers</td>
</tr>
[% FOREACH ad_zone = ad_zones %]
  <tr class="[% IF loop.index % 2 %]lite[% ELSE %]dark[% END %]">

<!-- name -->	
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
<a href="[% base_uri %]/app/ad/groups/edit/?id=[% ad_zone.ad_zone_id %]">
[% ad_zone.name %]</a></td>

<!-- creator -->
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
<a href="mailto:[% ad_zone.reg_id.email %]">[% ad_zone.reg_id.email %]</a></td>

<!-- type -->
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% ad_zone.type %]</td>

<!-- active -->	
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% IF ad_zone.active %]Yes[% ELSE %]No[% END %]</td>

<!-- routers -->
  <td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% IF ad_zone.router_count == 0 %]
    [% ad_zone.router_count %]
[% ELSE %]
<a href="[% base_uri %]/app/router/list?ad_group_id=[% ad_zone.ad_zone_id %]">
[% ad_zone.router_count %]</a>
[% END %]
</td>

</tr>
[% END %]
</table>

</div>
</div>


[% PROCESS footer.tmpl %]


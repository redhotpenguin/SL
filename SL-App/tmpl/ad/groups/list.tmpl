[% PROCESS header.tmpl title="Silver Lining Dashboard:  Ad Zones" selected="adcenter" %]
<div class="grid_16">
	<div id="breadcrumb">
		<div id="breadcrumb_inner">
			<ul>[% PROCESS ad/nav.tmpl %]<li><strong>Banner Ads</strong></li></ul>
		</div>
	</div>
</div>
<div class="clear"></div>


<div id="main_content" class="grid_10 suffix_1">
	<!-- MESSAGE -->
	[% IF msg %]<p class="success">[% msg %]</p>[% END %]


	<div class="grid_6 alpha">
		<h2>Banner Advertisements</h2>
		<p class="tip">You have <strong>[% count %]</strong> banner advertisements</p>
	</div>
	<div class="grid_4 omega">
		<a class="right" id="button_add_banner" href="[% base_uri %]/app/ad/groups/add">Add a Banner</a>
		<div class="clear"></div>
	</div>
	<div class="clear"></div>

		<h3 class="row">Select a Banner Ad below to edit</h3>
	
	
	<table class="large_table">
	<tr>
		<th>Ad Zone Name</th>
[% IF views %]		<th>Views Yesterday</th>[% END %]
		<th>Last Modified</th>
		<th>Default</th>
		<th>Active On</th>
		<th>Remove</th>
	</tr>
	
	[% FOREACH ad_zone = ad_zones %]
		<tr>
			<td class="larger">
			<a [% IF ad_zone.image_href %]class="preview" title="[% ad_zone.link_href %]" rel="[% ad_zone.image_href %]"[% END %] href="[% base_uri %]/app/ad/groups/edit/?id=[% ad_zone.ad_zone_id %]">
			[% ad_zone.name %]</a></td>
			
[% IF views %]			<td class="smaller">NA</td>[% END %]
			
			<td class="smaller">[% ad_zone.mts %]</td>

			<td class="smaller center">[% IF ad_zone.is_default == 1 %]Yes[% ELSE %]No[% END %]</td>

			<td class="smaller">
			[% IF ad_zone.router_count == 0 %]
			    [% ad_zone.router_count %]
			[% ELSE %]
			<a href="[% base_uri %]/app/router/list?ad_zone_id=[% ad_zone.ad_zone_id %]">
			[% ad_zone.router_count %]</a>
			[% END %]
			devices
			</td>
			
			<td class="center">
            <a href="#" rel="ad/deactivate?id=[% ad_zone.ad_zone_id %]"  class="icon_delete confirm">Delete</a></td>

            </tr>

	[% END %]
	</table>
</div>

<div id="secondary_content" class="grid_5">
	<div id="sc_top">
		<div id="sc_bottom">
		
			<h3>Brand your Network</h3>
			[% IF reg.account.plan == 'free' %]
			To brand your ad bar, you will need a paid account.  <a href="[% base_uri %]/billing/publisher/?plan=basic&email=[% reg.email %]">Click here</a> to sign up for our Basic Plan.
			
			[% ELSE %]
			<a href="[% base_uri %]/app/ad/bugs/list">
				<img alt="Brand your ad banners with your logo." src="[% base_uri %]/resources/images/logos/application/brand_logo.png "/>
			</a>
			<p><a href="[% base_uri %]/app/ad/bugs/list">Customize the logo</a> that is displayed next to the Ad banners on your network. </p>
			[% END %]
			
		</div>
	</div>
</div>

[% PROCESS footer.tmpl %]


<div id='confirm' style='display:none'>
	<a href='#' title='Close' class='modalCloseX simplemodal-close'>x</a>
	<div class='header'><span>Confirm</span></div>
	<p class='message'></p>
	<div class='buttons'>
		<div class='no simplemodal-close'>No</div><div class='yes'>Yes</div>
	</div>
</div>
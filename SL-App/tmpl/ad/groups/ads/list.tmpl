[% PROCESS header.tmpl %]
[% PROCESS left.tmpl %]

<div id="list_center">
<div class="content">

<h2>[% PROCESS ad/groups/ads/nav.tmpl %]</h2>
<hr size=1 color="#CCCCCC">

[% IF session.msg %]
<p><font color="red">[% session.msg %]</font></p>
[% END %]
<p style="text-align: left; padding-bottom: 5px;">
<a href="[% base_uri %]/app/ad/groups/ads/edit?ad_group_id=[% ad_group.ad_group_id %]">Create a new Ad for Ad Group '[% ad_group.name %]'</a></span></p>

<p>The following ads are assigned to Ad Group '[% ad_group.name %]':</p>

<table class="list">
<tr class="list_header">
<td class="header">Ad Text</td>
<td class="header">Creator</td>
<td class="header">Active</td>
</tr>
[% FOREACH ad_sl = ad_sls %]
  <tr class="[% IF loop.index % 2 %]lite[% ELSE %]dark[% END %]">

<!-- name -->	
  <td class="[% IF loop.index % 2 %]el_lite_left[% ELSE %]el_dark_left[% END %]">
<a href="[% base_uri %]/app/ad/groups/ads/edit?ad_sl_id=[% ad_sl.ad_sl_id %]">[% ad_sl.text %]</a></td>

<!-- creator -->
  <td class="[% IF loop.index % 2 %]el_lite_left[% ELSE %]el_dark_left[% END %]">
[% ad_sl.reg_id.email %]</td>


<td class="[% IF loop.index % 2 %]el_lite[% ELSE %]el_dark[% END %]">
[% IF ad_sl.ad_id.active %]Yes[% ELSE %]No[% END %]</td>


</tr>
[% END %]
</table>

</div>
</div>

[% PROCESS footer.tmpl %]

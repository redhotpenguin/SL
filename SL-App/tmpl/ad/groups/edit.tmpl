[% PROCESS header.tmpl title="Silver Lining Dashboard:  Edit ad zone"  selected="adcenter" %]
<form method="post" action="[% base_uri %]/app/ad/groups/edit">
<div class="grid_16">
	<div id="breadcrumb">
		<div id="breadcrumb_inner">
			<ul>[% PROCESS ad/groups/nav.tmpl %]<li>Edit<strong> '[% ad_zone.name %]'</strong> Banner</li></ul>
		</div>
	</div>
</div>
<div class="clear"></div>


<!-- BANNER PREVIEW -->
[% IF !ad_zone.image_href %]
	[% IF req.param('code') or ad_zone.code %]
	   <div class="grid_16">
			<div id="banner_preview">
	   		 <div id="banner">[% req.param('code') or ad_zone.code %]</div>
			<div class="clear"></div>
			</div>
		</div>	
	[% END %]
[% END %]


<div id="main_content" class="grid_10 suffix_1">
	<h2>'[% ad_zone.name %]' Banner</h2>

		<!-- Errors -->
		[% IF status == 'update_ok' %]<p class="success">Your ad zone has been updated.</p>[% END %]
		[% IF errors.missing %]<p class="error">Please fill in the missing fields</p>[% END %]
		[% IF errors.invalid %]<p class="error">Some fields were invalid, please correct them</p>[% END %]
		
		<ul class="form row"> 
			<li>
				<!-- name -->
				<div class="grid_6 alpha omega suffix_4">
					<label for="name" class="[% IF errors.missing.name %]error[% END %]">Banner Ad Name</label>
					<input type="text" name="name" size="30" value='[% req.param('name') or ad_zone.name %]' />
					<div class="clear"></div>
				</div>
				<div class="clear"></div>
			</li>
			
			<li style="display:none;">
				<!-- ad size -->
				<label for="ad_size_id" class="[% IF errors.missing.ad_size_id %]error[% END %]">Ad Size</label>
				<select name="ad_size_id" id="ad_size_id">
					<option value="">Select ad zone size</option>
					[% FOREACH ad_size = ad_sizes %]
				    [% IF loop.prev.grouping != ad_size.grouping %]
				    <option value=""></option>
				    <option value="">--&nbsp; 
				    [% END %]
				    [% IF ad_size.grouping == 1 %]Persistent Leaderboard
				    [% ELSIF ad_size.grouping == 8 %]Persistent Micro Bar
				    [% ELSIF ad_size.grouping == 6 %]Persistent Full Banner[% END %]
				    </option>
					<option value="[% ad_size.ad_size_id %]" [% IF ad_zone.ad_size.ad_size_id == ad_size.ad_size_id %]selected="selected"[% END %]>[% ad_size.name %]</option>
					[% END %]
				</select>

				<div class="clear"></div>

			</li>	
		</ul>
		

        [% PROCESS ad/zone_type.tmpl type="Banner" %]

		
		<ul class="form">


        [% PROCESS ad/code.tmpl type="Banner" %]



			<li>
				<label for="zone_type" class="label">Place banner at...</label>
				<div class="grid_2 alpha">
					<input id="text" type="radio" name="banner_placement" value="top" [% IF (ad_zone.ad_size_id == 1) or (ad_zone.ad_size_id == 10) %]checked="checked"[% END %]/>
					<label for="top" class="check_label">Top of page</label>
				</div>
				
				<div class="grid_4 omega">
					<input class="left" id="text" type="radio" name="banner_placement" value="bottom" [% IF (ad_zone.ad_size_id == 12) %]checked="checked"[% END %]/>
					<label for="bottom" class="check_label left">Bottom of page</label>
					<div class="clear"></div>
				</div>
				<div class="clear"></div>
			</li>

			<li>
				<div class="grid_10 alpha">
					<input id="text" type="checkbox" name="floating" [% IF (ad_zone.ad_size_id == 12) or (ad_zone.ad_size_id == 10) or (ad_zone.ad_size_id == 12) %]checked="checked"[% END %]/>
					<label for="floating" class="check_label">Keep banner fixed in view (floating above webpage)</label>
				</div>
				<div class="clear"></div>
			</li>


			<li>
				<input type="hidden" name="id" value="[% ad_zone.ad_zone_id %]">
			</li>
		</ul>
</div>


[% PROCESS ad/advanced.tmpl type="Banner" %]


<div class="grid_16">
	<ul class="form">
		<li>
		   <input type="submit" value="Save ad zone" />
		</li>
	</ul>
</div>

</form>


[% PROCESS footer.tmpl %]

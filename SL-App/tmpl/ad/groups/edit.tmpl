[% PROCESS header.tmpl title="Silver Lining Dashboard:  Add or Edit Ad Zone" %]
[% PROCESS left.tmpl %]

<div id="list_center">
	<div class="content">

<h2>[% PROCESS ad/groups/nav.tmpl %] > 

[% UNLESS ad_zone.ad_zone_id  %]Add a New Ad Zone[% ELSE %]Edit an existing Ad Zone[% END %]</h2>
<hr size=1 color="#CCCCCC">
<div id="edit_form">

<table class="edit"> 

<tr><td colspan=2>
[% IF ad_zone.ad_zone_id %]
	<h2>You are editing Ad Zone '[% ad_zone.name %]'</h2>
[% ELSE %]
<h2>You are adding a new Ad Zone</h2></td></tr>
[% END %]

[% IF status == 'update_ok' %]
<p><font color="red">Your Ad Zone has been updated.</font></p>
[% END %]

[% IF errors.missing %]
<p><font color="red">Please fill in the missing fields</font></p>
[% END %]

[% IF errors.invalid %]
<p><font color="red">Some fields were invalid, please correct them</font></p>
[% END %]

<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>

<form method="POST" action="[% base_uri %]/app/ad/groups/edit">

<!-- name -->
<tr><td>
[% IF errors.missing.name %]<font color="red">[% END %]
Ad Zone Name:
[% IF errors.missing.name %]</font>[% END %]</td>
<td><input type="text" name="name" size="30" value='[% req.param('name') or ad_zone.name %]'>
</td></tr>

<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>


<!-- invocation code -->
<tr><td colspan=2>
[% IF errors.missing.code %]<font color="red">[% END %]
Invocation Code:
[% IF errors.missing.code %]</font>[% END %]
</td></tr>

<tr><td colspan=2><textarea name="code" rows="10" cols="60">
[% req.param('code') or ad_zone.code %]
</textarea>
</td></tr>

<tr><td colspan=2>
<font color="#CCCCCC">Provided by your ad server</font></td></tr>
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>


<!-- type -->
<tr><td colspan=2>
[% IF errors.missing.type %]<font color="red">[% END %]
Ad Format: &nbsp;&nbsp;
[% IF errors.missing.type %]</font>[% END %]
<select name="type">

<option value="" [% IF ad_zone.type == '' %]SELECTED[% END %]>Select Ad Format</option>

[% FOREACH type = types %]
<option value="[% type %]" [% IF ad_zone.type == type %]SELECTED[% END %]>[% type %]</option>
[% END %]
</select>
</td></tr>

<tr><td colspan=2>
<font color="#CCCCCC">Format that corresponds to invocation code</font></td></tr>
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>




<!-- active -->
<tr><td>Active:</font></td>
<td>
Yes<input type="radio" name="active" value="t" [% IF (ad_zone.active == 1) or (! ad_zone) %]checked[% END %]>&nbsp;
No<input type="radio" name="active" value="f" [% IF ad_zone.active == 0 %] checked [% END %]></td></tr>

<tr><td colspan=2><font color="#CCCCCC">
Deactivating the ad zone removes it from the ad serving rotation.<br />To ensure consistency in reporting, ad zones cannot be deleted.
</font></td></tr>
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>




<tr><td><input type="submit" value="Save Ad Zone"></td></tr>
<input type="hidden" name="id" value="[% ad_zone.ad_zone_id %]">
</form>

</table>
</div>
</div>
</div>

[% PROCESS footer.tmpl %]

[% PROCESS header.tmpl title="Silver Lining Dashboard:  Add or edit ad zone" selected="adcenter" %]
<div class="grid_16">
	<div id="breadcrumb">
		<div id="breadcrumb_inner">
			<ul>[% PROCESS ad/nav.tmpl %]<li><strong>Text Message Bar</strong></li></ul>
		</div>
	</div>
</div>

<div id="main_content" class="grid_10 suffix_1">
	<h2>Text Entry Message Bar</h2>
	
	<div class="row">
	<form class="form" method="post" action="[% base_uri %]/app/ad/msg/index">
	<!-- ERRORS -->
	[% IF errors.missing %]<p class="error">Please enter a text message</p>[% END %]
	[% IF errors.invalid %]<p class="error">Text message can be no greater than 140 characters</p>[% END %]
	
	<ul> 
		<li>
			<div class="grid_6 alpha omega suffix_4">
				<!-- email -->
				<label for="text_message" class="[% IF errors.missing.text_message %]error[% END %]">Enter Text, max 140 characters</label>
				<textarea name="text_message" id="text_message" rows="5" cols="40">[% req.param('text_message') or reg.account_id.text_message %]</textarea>
				<div class="clear"></div>
			</div>
			<div class="clear"></div>
		</li>			
		<li>
			<input type="checkbox" name="sweep" id="sweep" /><label class="check_label" for="sweep">Activate the Message Bar on all devices </label>
			<div class="clear"></div>
			<label for="sweep" class="tip">(this will reset all existing ad bar settings)</label>	
		</li>
		<li>
			<input type="submit" value="Save Text Message" />
		</li>
	</ul>
	
	</form>
	<div class="clear"></div>
	</div>
</div>



[% PROCESS footer.tmpl %]

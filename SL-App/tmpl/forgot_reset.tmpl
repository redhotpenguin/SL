[% PROCESS header.tmpl title="Silver Lining Dashboard:  Reset Password" no_settings="1" %]
[% PROCESS left.tmpl %]

<div id="center">
<div class="content">

<h2><a href="[% home_uri %]">Home</a> > <a href="[% base_uri %]/login/">Login</a> > <a href="[% base_uri %]/forgot/">Forgot Password?</a> > Reset Password</h2>
<hr class="sl_line">
[% IF error == 'tooshort' %]<p><font color="red">Your password was too short, please try again</font></p>[% END %]
<br />
<h3>Enter a new password</h3>
<form method="POST" action="[% base_uri %]/forgot/reset/">
<p>Password:&nbsp;&nbsp;<input type="password" name="password"></p>
<p><font color="#CCCCCC">Minimum 6 characters</font></p>
<input type="hidden" name="key" value="[% key %]">
<hr class="sl_line">

<p><input type="submit" name="login" value="Submit"></p>
</form>
</div>
</div>
[% PROCESS footer.tmpl %]

[% INCLUDE header.tmpl %]

<div id="list_center">
	<div class="content">

<h2><a href="/app">Dashboard</a> > <a href="/app/ad/list">Manage Your Ads</a> > [% IF ad.ad_id == -1 %]Add[% ELSIF ad.ad_id != -1 %]Edit[% END %]</h2>
<div id="edit_form">

<table class="edit"> 

<tr><td colspan=2>
	[% IF ad.ad_id != -1 %]
	<p>YOU ARE EDITING AD ID '[% ad.ad_id %]'</p>
[% ELSIF ad.ad_id == -1 %]
<p>You are adding an ad to the system</p>
[% END %]
<hr size=1 color="#CCCCCC"></td>

<form method="POST" action="/app/ad/edit/?ad_id=[% ad.ad_id %]">
<tr><td>Ad Text:</td><td><input type="text" name="text" size="50" maxlength="100" value="[% ad.text %]"></td></tr>
<tr><td colspan=2>(100 character limit)</td></tr>
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>
<tr><td>Ad Links To:</td><td><input type="text" name="link" size="50" maxlength="512" value="[% link.uri %]"></td></tr>
<tr><td colspan=2>(example http://anywebsite.com/)</td></tr>
[% IF link.uri %]<tr><td colspan=2><a href="[% link.uri %]">Link</a></td></tr>[% END %]
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>
<tr><td>Active:</td><td>
Yes<input type="radio" name="active" value="1" [% IF ad.active == 1 ||  ad.ad_id == -1 %] checked [% END %]>
No<input type="radio" name="active" value="0" [% IF ad.active == 0 %] checked [% END %]>
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>
</td></tr>
<tr><td>Ad Group:</td><td><select name="ad_group_id">
[% FOREACH ad_group = ad_groups %]
<option [% IF ad.ad_group_id.ad_group_id == ad_group.ad_group_id %] SELECTED 
[% END %] value="[% ad_group.ad_group_id %]">[% ad_group.name %]</option>
[% END %]
</select>
</td></tr>
<tr><td colspan=2><hr size=1 color="#CCCCCC"></td></tr>
<tr><td><input type="submit" value="Save"></td></tr>
</form>
</table>
</div>
</div>
</div>
[% INCLUDE right.tmpl %]
[% INCLUDE footer.tmpl %]
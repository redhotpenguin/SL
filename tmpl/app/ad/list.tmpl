[% INCLUDE header.tmpl %]
<div id="container">

<p class="breadcrumb"><a href="/app">Home</a> => <a href="/app/ad">Ads</a></p>
<p style="text-align: left">All ads currently in rotation</p>
<table class="list">
<tr class="list_header">
<td>Ad Id</td><td>Name</td><td>Text</td><td>Template</td>
<td>Active</td><td>Ad Group</td>
</tr>
[% FOREACH ad = ads %]
<tr class="[% IF loop.index % 2 %]lite[% ELSE %]dark[% END %]">
	
<td>
	<a href="/app/ad/edit/?ad_id=[% ad.ad_id %]">[% ad.ad_id %]</a></td>
<td><a href="/app/ad/edit/?ad_id=[% ad.ad_id %]">[% ad.name %]</a></td>
<td>[% ad.text %]</td>
<td>[% ad.template %]</td>
<td>[% IF ad.active %]Active[% ELSE %]Not Active[% END %]</td>
<td>[% ad.ad_group_id.name %]</td>
</tr>
[% END %]
</table>
<p style="text-align: left;"><a href="/app/ad/edit/?ad_id=-1">Add a new ad</a></p>
</div>
[% INCLUDE footer.tmpl %]